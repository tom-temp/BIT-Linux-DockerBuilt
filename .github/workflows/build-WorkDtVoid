# 工作流名称
name: Build Docker Image FOR WorkDt-void

on:
  push:
    branches:
      - master
    paths: # 路径
      - work-DT/void-workdt.dockerfile

env:
  APP_NAME: void-workdt
  DOCKERHUB_REPO: tomtemp1416/void-workdt

jobs:
  build:
    runs-on: ubuntu-latest
    environment: 
      name: docker-build
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Docker Setup QEMU
        uses: docker/setup-qemu-action@v3.0.0
        with:
          # QEMU static binaries Docker image (e.g. tonistiigi/binfmt:latest)
          # image: # optional, default is tonistiigi/binfmt:latest
          # Platforms to install (e.g. arm64,riscv64,arm)
          platforms: arm64,amd64
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}
      - name: Generate App Version
        run: echo APP_VERSION=`date "+%Y%M%d%H%M"` >> $GITHUB_ENV  
      - name: Build and push
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./work-DT/void-workdt.dockerfile
          platforms: linux/amd64,linux/arm64
          push: true
          tags: |
            ${{ env.DOCKERHUB_REPO }}:latest
            ${{ env.DOCKERHUB_REPO }}:${{ env.APP_VERSION }}

        
      # run: docker build . --file Dockerfile --tag my-image-name:$(date +%s)
